<section id="register">
  <div class="row mb-3">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <h3 class="text-center text-primary">Account Register <i class="fa fa-user-plus" aria-hidden="true"></i></h3>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name :</label>
          <input type="text" name="name" id="" class="form-control" value="{{name}}" required>
        </div>
        <div class="form-group">
          <label for="email">Email :</label>
          <input type="email" name="email" id="" class="form-control" value="{{email}}" required>
        </div>
        <div class="form-group">
          <label for="password">Password :</label>
          <input type="password" name="password" id="" class="form-control" value="{{password}}" required>
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password :</label>
          <input type="password" name="password2" id="" class="form-control" value="{{password2}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </div>
  </div>
</div>
</section>
